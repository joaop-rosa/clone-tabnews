{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "test": "npm run services:up && concurrently -n next,jest --hide next -k --success command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --watch --runInBand --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "lint": "npm run lint:prettier:check && npm run lint:eslint:check",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.3",
    "bcryptjs": "^3.0.2",
    "bulma": "1.0.3",
    "dotenv": "16.4.7",
    "dotenv-expand": "11.0.6",
    "next": "15.2.2",
    "next-connect": "1.0.0",
    "node-pg-migrate": "7.9.1",
    "pg": "8.14.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "swr": "2.3.3",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@faker-js/faker": "9.7.0",
    "commitizen": "4.3.1",
    "concurrently": "8.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint-config-next": "15.2.2",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.11.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "prettier": "3.5.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
